top-line(back-color)
  position absolute
  top 0
  left 0
  right 0
  width 100%
  height 5px
  background back-color

img-setup(area-width)
  .img
    width area-width
    margin 0 auto
    img
      width 100%
      border 2px solid #000
      box-sizing border-box

sub_h2(line-color)
  display inline-block
  font-size 35px
  margin 50px 0 25px
  padding 0 0 5px
  border-bottom 3px solid line-color

sub_h3(line-color)
  display inline-block
  font-size 25px
  margin 25px 0
  padding 0 0 5px
  border-bottom 3px solid line-color
